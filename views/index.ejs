<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Om The Flirter ğŸ’˜</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="logo">
                <span class="logo-emoji">ğŸ’˜</span>
                <h1>Om The Flirter</h1>
            </div>
            <div class="header-actions">
                <button class="export-btn" id="exportBtn">
                    <span>ğŸ“¥</span>
                    <span class="export-text">Export</span>
                </button>
                <button class="add-btn" id="addBtn">
                    <span>+</span>
                    <span class="add-text">Add New</span>
                </button>
            </div>
        </header>

        <!-- Tabs Navigation -->
        <nav class="tabs">
            <button class="tab-btn active" data-category="flirting">
                <span class="tab-emoji">ğŸ˜˜</span>
                <span class="tab-text">Flirting Lines</span>
            </button>
            <button class="tab-btn" data-category="sayari">
                <span class="tab-emoji">ğŸ“</span>
                <span class="tab-text">Sayari</span>
            </button>
            <button class="tab-btn" data-category="mix">
                <span class="tab-emoji">ğŸ­</span>
                <span class="tab-text">Mix</span>
            </button>
        </nav>

        <!-- Search Bar -->
        <div class="search-container">
            <input type="text" id="searchInput" class="search-input" placeholder="ğŸ” Search in current category...">
            <button class="clear-search" id="clearSearch" style="display: none;">âœ•</button>
        </div>

        <!-- Content Area -->
        <main class="content" id="content">
            <!-- Items will be dynamically loaded here -->
        </main>

        <!-- Add/Edit Modal -->
        <div class="modal" id="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 id="modalTitle">Add New Item</h2>
                    <button class="close-btn" id="closeBtn">&times;</button>
                </div>
                <form id="itemForm">
                    <input type="hidden" id="itemId">
                    <textarea 
                        id="itemContent" 
                        placeholder="Enter your text here..." 
                        required
                        rows="5"
                    ></textarea>
                    
                    <div id="editPasswordContainer" style="display: none; margin-top: 15px;">
                        <input 
                            type="password" 
                            id="editPassword" 
                            class="password-input" 
                            placeholder="Enter Admin Password to Edit"
                        >
                    </div>

                    <div class="form-actions">
                        <button type="button" class="btn-cancel" id="cancelBtn">Cancel</button>
                        <button type="submit" class="btn-submit" id="submitBtn">Save</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div class="modal" id="deleteModal">
            <div class="modal-content delete-modal">
                <h2>Delete Item?</h2>
                <p>Are you sure you want to delete this item? This action cannot be undone.</p>
                
                <div style="margin-bottom: 20px;">
                    <input 
                        type="password" 
                        id="deletePassword" 
                        class="password-input" 
                        placeholder="Enter Admin Password to Delete"
                    >
                </div>

                <div class="form-actions">
                    <button type="button" class="btn-cancel" id="cancelDeleteBtn">Cancel</button>
                    <button type="button" class="btn-delete" id="confirmDeleteBtn">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/app.js"></script>
</body>

</html>